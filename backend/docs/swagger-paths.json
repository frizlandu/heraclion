{
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "Connexion utilisateur",
        "description": "Authentifie un utilisateur et retourne un token JWT",
        "security": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["email", "mot_de_passe"],
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "admin@heraclion.com"
                  },
                  "mot_de_passe": {
                    "type": "string",
                    "minLength": 8,
                    "example": "motdepasse123"
                  },
                  "se_souvenir": {
                    "type": "boolean",
                    "default": false
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Connexion réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Connexion réussie"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token": {
                          "type": "string",
                          "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                        },
                        "user": {
                          "$ref": "#/components/schemas/User"
                        },
                        "expires_at": {
                          "type": "string",
                          "format": "date-time"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Email ou mot de passe incorrect",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                },
                "example": {
                  "success": false,
                  "message": "Email ou mot de passe incorrect"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "Déconnexion utilisateur",
        "description": "Déconnecte l'utilisateur et invalide le token",
        "responses": {
          "200": {
            "description": "Déconnexion réussie",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Déconnexion réussie"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": ["Auth"],
        "summary": "Profil utilisateur connecté",
        "description": "Récupère les informations de l'utilisateur connecté",
        "responses": {
          "200": {
            "description": "Profil utilisateur",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/documents": {
      "get": {
        "tags": ["Documents"],
        "summary": "Liste des documents",
        "description": "Récupère la liste des factures et proformas avec pagination et filtres",
        "parameters": [
          {
            "name": "type_document",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["FACTURE", "PROFORMA"]
            },
            "description": "Type de document à filtrer"
          },
          {
            "name": "statut",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["BROUILLON", "EMISE", "ENVOYEE", "PAYEE", "ANNULEE"]
            },
            "description": "Statut du document"
          },
          {
            "name": "client_id",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "description": "ID du client"
          },
          {
            "name": "date_debut",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date de début pour filtrer"
          },
          {
            "name": "date_fin",
            "in": "query",
            "schema": {
              "type": "string",
              "format": "date"
            },
            "description": "Date de fin pour filtrer"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 50
            },
            "description": "Nombre d'éléments par page"
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            },
            "description": "Nombre d'éléments à ignorer"
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des documents",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "documents": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Document"
                          }
                        },
                        "total": {
                          "type": "integer",
                          "example": 150
                        },
                        "limit": {
                          "type": "integer",
                          "example": 50
                        },
                        "offset": {
                          "type": "integer",
                          "example": 0
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          }
        }
      },
      "post": {
        "tags": ["Documents"],
        "summary": "Créer un document",
        "description": "Crée une nouvelle facture ou proforma",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["type_document", "client_id"],
                "properties": {
                  "type_document": {
                    "type": "string",
                    "enum": ["FACTURE", "PROFORMA"]
                  },
                  "client_id": {
                    "type": "integer"
                  },
                  "date_emission": {
                    "type": "string",
                    "format": "date"
                  },
                  "date_echeance": {
                    "type": "string",
                    "format": "date"
                  },
                  "items": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["description", "quantite", "prix_unitaire"],
                      "properties": {
                        "description": {
                          "type": "string",
                          "maxLength": 500
                        },
                        "quantite": {
                          "type": "number",
                          "minimum": 0
                        },
                        "prix_unitaire": {
                          "type": "number",
                          "minimum": 0
                        },
                        "taux_tva": {
                          "type": "number",
                          "minimum": 0,
                          "maximum": 100,
                          "default": 20
                        }
                      }
                    }
                  },
                  "notes": {
                    "type": "string",
                    "maxLength": 1000
                  }
                }
              },
              "example": {
                "type_document": "FACTURE",
                "client_id": 1,
                "date_emission": "2024-01-15",
                "date_echeance": "2024-02-15",
                "items": [
                  {
                    "description": "Service de transport Paris-Lyon",
                    "quantite": 1,
                    "prix_unitaire": 1000.00,
                    "taux_tva": 20
                  }
                ],
                "notes": "Transport express"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Document créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Document créé avec succès"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Document"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          }
        }
      }
    },
    "/documents/{id}": {
      "get": {
        "tags": ["Documents"],
        "summary": "Détails d'un document",
        "description": "Récupère les détails complets d'un document par son ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "ID du document"
          }
        ],
        "responses": {
          "200": {
            "description": "Détails du document",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "$ref": "#/components/schemas/Document"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "put": {
        "tags": ["Documents"],
        "summary": "Modifier un document",
        "description": "Modifie un document existant (seulement si statut BROUILLON)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date_emission": {
                    "type": "string",
                    "format": "date"
                  },
                  "date_echeance": {
                    "type": "string",
                    "format": "date"
                  },
                  "items": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/DocumentItem"
                    }
                  },
                  "notes": {
                    "type": "string",
                    "maxLength": 1000
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Document modifié avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Document modifié avec succès"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Document"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          }
        }
      },
      "delete": {
        "tags": ["Documents"],
        "summary": "Supprimer un document",
        "description": "Supprime un document (seulement si statut BROUILLON)",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Document supprimé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Document supprimé avec succès"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          }
        }
      }
    },
    "/documents/{id}/validate": {
      "post": {
        "tags": ["Documents"],
        "summary": "Valider un document",
        "description": "Change le statut d'un document de BROUILLON à EMISE",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Document validé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Document validé avec succès"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Document"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Document déjà validé ou statut invalide",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/documents/{id}/pdf": {
      "get": {
        "tags": ["Documents"],
        "summary": "Télécharger le PDF d'un document",
        "description": "Génère et télécharge le PDF du document",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "PDF du document",
            "content": {
              "application/pdf": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/clients": {
      "get": {
        "tags": ["Clients"],
        "summary": "Liste des clients",
        "description": "Récupère la liste des clients avec pagination et filtres",
        "parameters": [
          {
            "name": "nom",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Recherche par nom"
          },
          {
            "name": "ville",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filtrer par ville"
          },
          {
            "name": "actif",
            "in": "query",
            "schema": {
              "type": "boolean"
            },
            "description": "Filtrer par statut actif"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 50
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Liste des clients",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "clients": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Client"
                          }
                        },
                        "total": {
                          "type": "integer"
                        },
                        "limit": {
                          "type": "integer"
                        },
                        "offset": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "post": {
        "tags": ["Clients"],
        "summary": "Créer un client",
        "description": "Crée un nouveau client",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Client"
              },
              "example": {
                "nom": "SARL Durand",
                "contact_principal": "Jean Durand",
                "email": "contact@durand.com",
                "telephone": "01 23 45 67 89",
                "adresse": "123 Rue de la Paix",
                "code_postal": "75001",
                "ville": "Paris",
                "siret": "12345678901234",
                "entreprise_id": 1
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Client créé avec succès",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "example": true
                    },
                    "message": {
                      "type": "string",
                      "example": "Client créé avec succès"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Client"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/ValidationError"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    }
  }
}