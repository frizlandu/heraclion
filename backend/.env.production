# Production environment variables for backend (do not commit secrets to VCS)
# Fill these values in Render/other host environment settings instead of committing

NODE_ENV=production
PORT=3000

# PostgreSQL (managed Postgres on Render or other provider)
# Example: postgres://user:password@host:port/dbname
DB_HOST=__POSTGRES_HOST__
DB_PORT=5432
DB_NAME=__POSTGRES_DB__
DB_USER=__POSTGRES_USER__
DB_PASSWORD=__POSTGRES_PASSWORD__

# JWT
# Replace with a long, random string (at least 32 characters)
JWT_SECRET=__GENERATED_JWT_SECRET__
JWT_EXPIRES_IN=24h

# Logs
LOG_LEVEL=info

# CORS - comma separated list of allowed origins
# e.g. https://app.example.com
ALLOWED_ORIGINS=__FRONTEND_URL__
